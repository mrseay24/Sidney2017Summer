<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/darker_gray">

    <TextView
        android:id="@+id/dialog_custom_tv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Quiz3"
        android:textSize="30sp"
        android:background="@android:color/white"
        android:gravity="center"
        android:textColor="@android:color/black"
        />

    <RadioGroup
        android:id="@+id/Quiz2_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black">
        <RadioButton
            android:id="@+id/Quiz2_radiobt_yes"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Yes"/>

        <RadioButton
            android:id="@+id/Quiz2_radiobt_no"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="No"/>

        <RadioButton
            android:id="@+id/Quiz2_radiobt_exit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Exit"/>
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@android:color/black">

        <Button
            android:id="@+id/Quiz2_cancel_bt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:textAllCaps="false"
            android:text="Cancel" />
        <Button
            android:id="@+id/Quiz2_ok_bt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textAllCaps="false"
            android:text="OK"/>
    </LinearLayout>

</LinearLayout>